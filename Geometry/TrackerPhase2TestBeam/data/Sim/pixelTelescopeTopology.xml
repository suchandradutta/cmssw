<?xml version="1.0"?>

<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../../DetectorDescription/Schema/DDLSchema.xsd">
<SpecParSection label="pixelTelescopeTopology.xml">


<!-- Telescope volume -->
<SpecPar name="TelescopePar">
<PartSelector path="//telescope:Telescope" />
<Parameter name="TelescopeDDDStructure" value="Telescope"/>
</SpecPar>


<!-- DUT Holder and DUT -->
<SpecPar name="DUTHolderPar">
<PartSelector path="//telescope:DUTHolder"/>
<Parameter name="TelescopeDDDStructure" value="DUTHolder"/>
</SpecPar>

<SpecPar name="DUTPar">
<PartSelector path="//DUT:BModule1Layer6"/>
<Parameter name="TelescopeDDDStructure" value="DUT"/>
</SpecPar>

<SpecPar name="InnerSensor2SActivePar">
<PartSelector path="//DUT:BModule1Layer6Lower2Sactive"/>
  <Parameter name="TelescopeDDDStructure" value="PixelBarrelDet"/>     <!-- TO DO : Renaming and associated work here as well -->
<Parameter name="DUTInnerSensor" value="true"/>                        <!-- TO DO : use equivalent of Geometry/TrackerNumberingBuilder/plugins/CmsDetConstruction.cc for telescope & rename the strings -->
<Parameter name="PixelROCRows" value="127"/>
<Parameter name="PixelROCCols" value="1"/>
<Parameter name="PixelROC_X" value="8"/>
<Parameter name="PixelROC_Y" value="2"/>
</SpecPar>

<SpecPar name="OuterSensor2SActivePar">
<PartSelector path="//DUT:BModule1Layer6Upper2Sactive"/>
<Parameter name="TelescopeDDDStructure" value="PixelBarrelDet"/>
<Parameter name="DUTOuterSensor" value="true"/>
<Parameter name="PixelROCRows" value="127"/>
<Parameter name="PixelROCCols" value="1"/>
<Parameter name="PixelROC_X" value="8"/>
<Parameter name="PixelROC_Y" value="2"/>
</SpecPar>




<!-- Telescope Arms, Planes and Phase 1 Pixels -->

<SpecPar name="ArmPar">
<PartSelector path="//telescope:Arm"/>
<Parameter name="TelescopeDDDStructure" value="Arm"/>
</SpecPar>

<SpecPar name="PlanePar">
<PartSelector path="//telescope:Plane"/>
<Parameter name="TelescopeDDDStructure" value="Plane"/>
</SpecPar>

<SpecPar name="Phase1PixelModulePar">
<PartSelector path="//Phase1BPIXLayer4Module:PixelBarrelModuleFullPlus"/>
<Parameter name="TelescopeDDDStructure" value="Phase1PixelModule"/>
</SpecPar>

<SpecPar name="Phase1PixelSensorActivePar">
<PartSelector path="//Phase1BPIXLayer4Module:PixelBarrelActiveFull3"/>
      <Parameter name="TelescopeDDDStructure" value="PixelBarrelDet"/>  <!-- TO DO : Renaming and associated work here as well -->
      <Parameter name="Phase1PixelSensor" value="true"/>
      <Parameter name="PixelROCRows" value="80"/>
      <Parameter name="PixelROCCols" value="52"/>
      <Parameter name="PixelROC_X" value="2"/>
      <Parameter name="PixelROC_Y" value="8"/>
</SpecPar>


</SpecParSection>
</DDDefinition>

